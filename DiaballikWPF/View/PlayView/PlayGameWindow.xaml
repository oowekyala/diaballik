<Window x:Class="DiaballikWPF.PlayGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiaballikWPF"
        mc:Ignorable="d"
        Title="GameWindow" Height="750 " Width="750" Background="#FFAD8FD8">
    <Grid>
        <UniformGrid x:Name="board" Margin="10,30,212,167" Height="522" Width="522" Background="#a8c6fa" Grid.Row="5" Grid.Column="5">
            
        </UniformGrid>
        <StackPanel Margin="559,30,0,3">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,20,0,0"/>
                </Style>
            </StackPanel.Resources>
            <Label Content="Player 2"/>
            <Button Content="Pass"/>
            <Button Content="Save"/>
            <Button Content="Load"/>
            <Button Content="Quit"/>
            <Label Content="Player 1"/>
        </StackPanel>
    </Grid>
</Window>
