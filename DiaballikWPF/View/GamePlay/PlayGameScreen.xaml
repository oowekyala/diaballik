<UserControl x:Class="DiaballikWPF.View.PlayGameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:DiaballikWPF"
             xmlns:view="clr-namespace:DiaballikWPF.View"
             xmlns:viewModel="clr-namespace:DiaballikWPF.ViewModel"
             mc:Ignorable="d"
             Background="#FFAD8FD8" d:DataContext="{d:DesignInstance viewModel:PlayGameScreenViewModel}">
    <DockPanel>

        <StackPanel DockPanel.Dock="Right" VerticalAlignment="Stretch">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,20,0,0" />
                </Style>
            </StackPanel.Resources>
            <Label Content="Player 2" />
            <Button Content="Pass" />
            <Button Content="Save" />
            <Button Content="Load" />
            <Button Content="Quit" />
            <Label Content="Player 1" />
        </StackPanel>
        
        <view:BoardView HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        DataContext="{Binding BoardViewModel}" />
    </DockPanel>

</UserControl>